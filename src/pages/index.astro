---
import Card from "../components/Card.astro";
import Photo from "../components/Photo.astro";
import Socials from "../components/Socials.astro";
import Education from "../contents/Education.astro";
import ScrollTop from "../components/ScrollTop.astro";
import Experience from "../contents/Experience.astro";
import Interests from "../contents/Interests.astro";
import Languages from "../contents/Languages.astro";
import Slideshow from "../contents/Slideshow.astro";
import Licences from "../contents/Licences.astro";
import Skills from "../contents/Skills.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Hakan Tugrul Otal">
	<div id="top" class="container">
		<main>
			<h1>Hi! I'm <span class="text-gradient">Hakan</span> üëãüèª</h1>
			<p class="instructions">
				<span>&rarr;</span> I'm currently studying Computer Engineering at
				Istanbul Technical University. I try to expand my knowledge on different
				technologies and subjects. My life goal is try to learn everything
				about something and something about everything.
			</p>
			<ul role="list" class="link-card-grid">
				<Card title="Experience">
					<Experience />
				</Card>
				<Card title="Education">
					<Education />
				</Card>
				<Card title="Demo Projects">
					<Slideshow />
				</Card>
				<Card title="Licences & Certificates">
					<Licences />
				</Card>
				<Card title="Languages">
					<Languages />
				</Card>
				<Card title="Skills">
					<Skills />
				</Card>
				<Card title="Interests">
					<Interests />
				</Card>
			</ul>
		</main>
		<div class="sidebar">
			<Photo />
			<Socials />
			<ScrollTop/>
		</div>
	</div>
</Layout>

<style>
	:root {
		--astro-gradient: linear-gradient(0deg, #1ecbf7, #eb3bca);
	}

	.container {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
	}

	main {
		margin: auto;
		padding: 1em;
		max-width: 50%;
	}

	.sidebar {
		margin: 0 auto;
		padding: 1em;
		max-width: 25%;
	}

	h1 {
		margin: 2rem 0;
	}

	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		background: #56a9f7;
		padding: 1rem;
		border-radius: 0.4rem;
		color: var(--color-bg);
	}

	.link-card-grid {
		display: grid;

		gap: 1rem;
		padding: 0;
	}

	.text-gradient {
		font-weight: 900;
		background-image: var(--astro-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 100% 200%;
		background-position-y: 100%;
		border-radius: 0.4rem;
		animation: pulse 4s ease-in-out infinite;
	}

	@keyframes pulse {
		0%,
		100% {
			background-position-y: 0%;
		}
		50% {
			background-position-y: 80%;
		}
	}
</style>
